<Window x:Class="ElkNET.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="142" Width="316" WindowStyle="ToolWindow" Closed="Window_Closed" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="tbLogin" Height="25" Margin="101,10,12,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" MinHeight="20" MaxHeight="30" MinWidth="50"/>
        <Label Content="Пользователь" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Height="30"/>
        <PasswordBox x:Name="tbPassword" Margin="101,45,12,0" VerticalAlignment="Top" Height="25" MaxHeight="30" MinHeight="20" MinWidth="50" PasswordChar="*"/>
        <Button x:Name="btOk" Content="Вход" Margin="10,0,10,10" VerticalAlignment="Bottom" IsDefault="True" Click="btOk_Click" Height="25" MaxHeight="25" MinHeight="25" MinWidth="50"/>

    </Grid>
</Window>
